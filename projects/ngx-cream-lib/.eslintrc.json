{
  "extends": "../../.eslintrc.json",
  "ignorePatterns": ["!**/*"],
  /* eslint eqeqeq: "off" */
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "c3m",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "c3m",
            "style": "kebab-case"
          }
        ],
        "@typescript-eslint/no-inferrable-types": "off",
        "@typescript-eslint/no-explicit-any": "off"
      }
    },
    {
      "files": ["*.html"],
      "rules": {
        /* eslint-disable-next-line
          bracketSameLine
        */
      }
    }
  ]
}
